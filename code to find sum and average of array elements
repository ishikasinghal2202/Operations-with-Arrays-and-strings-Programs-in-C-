#include <iostream>
using namespace std;

int main() {
    int arr[6], sum = 0;
    float average;

    cout << "Enter the numbers of the array:" << endl;

    for (int i = 0; i < 6; i++) {
        cin >> arr[i];
    }

    cout << "The numbers of the array are:" << endl;
    for (int n = 0; n < 6; n++) {
        cout << arr[n] << " ";
    }

    cout << "\nThe sum of the elements of the array is:" << endl;
    for (int i = 0; i < 6; i++) {
        sum += arr[i];
    }
    cout << sum << endl;

    average = static_cast<float>(sum) / 6;
    cout << "The average of the elements of the array is: " << average << endl;

    return 0;
}
